<div class="container">

  <h1>Mes locations</h1>
  <ul>
    <% @rentals.each do |rental|%>
    <li>
      <%= rental.character.name%>
      <br>
      <p>Pour la période du : </p>
      <%= rental.start_date %>
      <br>
      <p>au :</p>
      <%= rental.end_date %>
