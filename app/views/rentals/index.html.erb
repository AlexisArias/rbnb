<div class="container mb-4">
  <%= link_to "Retour Ã  l'accueil", root_path, :class => "btn btn-light btn-rounded mt-4", style:"font-family:'Montserrat';font-size:0.9em"%>
  <h1 class="mt-5 text-center" style="font-size:4.5rem">Mes locations</h1>
  <%= form_with(url: user_rentals_path, method: :get, class: "search-form mt-0 mb-5 d-flex justify-content-center") do %>
  <%= text_field_tag :query, params[:query], placeholder: "Recherchez vos locations...", class:"m-3" %>
  <%# <%= submit_tag "Recherche", class: "search-button btn btn-light btn-rounded mt-3", style:"height:40px" %>
  <% end %>
  <div class="row">
    <% @rentals.each do |rental|%>
    <div class="col-md-4 mb-5">
      <div class="d-flex justify-content-between align-items-center p-4 m-1 card-type">
          <%= image_tag rental.character.image, class:"d-inline-block img-border", style:"width: 100px; height: 150px; object-fit: cover; max-width:200px;"%>
          <div class="d-flex row justify-content-center align-items-center text-center">
            <h5 class="m-0 p-0"><strong class="card-title text-center"><%= rental.character.name%></strong></h5>
            <p class="m-0 p-0"><%= l(rental.start_date, format: "%d %B %Y")%><br>au<br><%= l(rental.end_date, format: "%d %B %Y")%></p>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>
