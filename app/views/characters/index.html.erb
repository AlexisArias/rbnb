<div class="container d-flex flex-column justify-content-center align-items-center">
  <h1 class="mt-5">Bienvenue sur <strong>Kamerotto</strong> !</h1>
  <h5 class="mb-5">Salutation ô noble villageois.</h5>

  <div class="container">
    <div class="row">
      <% @characters.each do |character| %>
        <div class="col-md-4 col-xs-6 mb-3 d-flex align-items-stretch">
          <div class="card card-type">
            <%= image_tag character.image, class:"img-fluid img-card-type", style: "width: 100%; height: 600px; object-fit: cover;"  %>
            <div class="card-body pb-5 mb-2 d-flex flex-column justify-content-center align-items-center" style="position: relative">
              <h3 class="d-flex justify-content-center align-items-center" style="width: 100%; height: 70px;"><%= character.name %></h3>
              <p class="text-truncate-container"><%= character.description %></p>
              <div>
                <p>Note :<%  character.rating.to_i.times do  %>
                  <i class="bi bi-star-fill" style="color:orange;"></i>
                <% end %>
                </p>
              </div>
              <p class="mb-3">Louer pour : <%= character.price %>€</p>
              <div style="position:absolute; bottom:15px">
                <%= link_to "Louer ce personnage", character_path(character), :class => "btn btn-dark btn-rounded"%>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
