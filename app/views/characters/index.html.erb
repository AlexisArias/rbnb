<div class="container d-flex flex-column justify-content-center align-items-center">
  <h1 class="mt-5">Bienvenue sur <strong>Kamerotto</strong> !</h1>
  <h5 class="mb-5">Salutation ô noble villageois.</h5>

  <div class="container">
    <div class="row">
      <% @characters.each do |character| %>
        <div class="col-md-3 col-xs-6 mb-3 d-flex align-items-stretch">
          <div class="card-type">
            <%= image_tag character.image, class:"img-fluid img-card-type", style: "width: 100%; height: 600px; object-fit: cover;"  %>
            <div class="card-body pb-2 mb-2 d-flex flex-column justify-content-center align-items-center">
              <h4 class="text-center"><%= character.name %></h4>
              <p class="text-truncate-container"><%= character.description %></p>
              <div>
                <p><%= character.rating %>/5<%  character.rating.to_i.times do  %>
                  <i class="bi bi-star-fill" style="color:orange;"></i>
                <% end %>
                </p>
              </div>
              <div class="d-flex flex-column justify-content-between align-items-center">
                <p class="m-0">Tarif de location</p>
                <h5><strong><%= character.price %>€/jour</strong></h5>
                <p><%= link_to "Louer ce personnage", character_path(character), :class => "btn btn-dark btn-rounded mt-4"%></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
