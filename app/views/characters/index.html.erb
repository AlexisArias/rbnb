<div class="container d-flex flex-column justify-content-center align-items-center">
  <h1 class="mt-5 mb-0"><strong>Bienvenue chez Kamerotto</strong></h1>
  <p class="mb-5", style="font-weight:200">Salutation Ô noble villageois.</p>

  <div class="container">
    <div class="row">
      <% @characters.each do |character| %>
        <div class="col-md-3 col-sm-6 mb-5 d-flex align-items-stretch">
          <div class="card-type rounded-top-5">
          <%= link_to character_path(character) do %>
            <%= image_tag character.image, class:"img-fluid img-card-type rounded-top-5", style: "width: 100%; height: 350px; object-fit: cover;"  %>
          <% end %>
            <div class="card-body pb-2 mb-2 d-flex flex-column justify-content-center align-items-center">
              <h4 class="text-center mt-2 mb-2"><%= character.name %></h4>
              <div>
                <p><%= character.rating %>/5<%  character.rating.to_i.times do  %>
                  <i class="bi bi-star-fill" style="color:orange;"></i>
                <% end %>
                </p>
              </div>
              <div data-controller="read-more" data-read-more-more-text-value="Read more ↓" data-read-more-less-text-value="Read less ↑">
                <p class="text-truncate-container m-0" data-read-more-target="content">
                  <%= character.description %>
                </p>
                <a data-action="read-more#toggle">
                  <p class="mb-3 text-center"><u>Read more ↓</u></p>
                </a>
              </div>
              <div class="d-flex flex-column justify-content-between align-items-center">
                <p class="m-0">Tarif de location</p>
                <h5><strong><%= character.price %>€/jour</strong></h5>
                <p class="m-2"><%= link_to "Louer", character_path(character), :class => "btn btn-light btn-rounded", style:"font-family:'Montserrat';font-size:1em"%></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
